<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Belépés Log</title>
    <style>
        body { font-family: Arial; }
        #messages { margin-top: 20px; }
        .msg { padding: 10px; margin: 5px 0; background: #eee; border-radius: 5px; }
    </style>
</head>
<body>
<h1>Valós idejű belépés log</h1>
<div id="messages"></div>

<script>
    const ws = new WebSocket("ws://localhost:3333");

    ws.onmessage = (event) => {
        const div = document.createElement("div");
        div.className = "msg";
        div.innerText = event.data;
        document.getElementById("messages").prepend(div);
    };
</script>
</body>
</html>
